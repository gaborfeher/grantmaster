<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>
<?import com.github.gaborfeher.grantmaster.ui.cells.*?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.gaborfeher.grantmaster.ui.ProjectNotesTabController">
  <children>
    <Button onAction="#newNoteButton" text="%ProjectNoteNewButton" />
    <TableView fx:id="table" VBox.vgrow="ALWAYS" editable="true">
      <columns>
        <TableColumn editable="false" prefWidth="150">
          <cellFactory>
            <EditButtonTableCellFactory />
          </cellFactory>
          <cellValueFactory>
            <PropertyValueFactory property="state" /> 
          </cellValueFactory>
        </TableColumn> 
        <TableColumn text="%ProjectNotesEntryTime" editable="false" prefWidth="200" >
          <cellValueFactory>
            <PropertyValueFactory property="entryTime" />
          </cellValueFactory>
        </TableColumn>
        <TableColumn text="%ProjectNotesNote" prefWidth="700" >
          <cellFactory>
            <StringTableCellFactory property="note" /> 
          </cellFactory>
          <cellValueFactory>
            <PropertyValueFactory property="note" /> 
          </cellValueFactory>
        </TableColumn>
      </columns>
    </TableView> 
  </children>
</VBox>
