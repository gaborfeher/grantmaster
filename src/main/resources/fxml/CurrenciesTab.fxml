<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.cell.*?>
<?import com.github.gaborfeher.grantmaster.ui.cells.*?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:id="mainNode" fx:controller="com.github.gaborfeher.grantmaster.ui.CurrenciesTabController">
  <children>
    <GridPane>
      <Label text="%CurrencyNameEntry" GridPane.rowIndex="0" GridPane.columnIndex="0"  /> 
      <TextField fx:id="codeEntry" GridPane.rowIndex="0" GridPane.columnIndex="1" />

      <Button text="%CurrencyAddButton" onAction="#addCurrencyButtonAction" GridPane.rowIndex="1" GridPane.columnIndex="0"  />
    </GridPane>
    <TableView fx:id="currencyTable" VBox.vgrow="ALWAYS">
      <columns>
        <TableColumn text="%CurrencyNameColumn" prefWidth="150">
          <cellValueFactory>
            <PropertyValueFactory property="code" /> 
          </cellValueFactory>
        </TableColumn>
      </columns>
    </TableView>                
  </children>
</VBox>