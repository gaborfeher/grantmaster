<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.cell.*?>
<?import com.github.gaborfeher.grantmaster.ui.cells.*?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.gaborfeher.grantmaster.ui.ProjectSourceTabController">
  <children>
    <Button text="%ProjectSourceAddButtonLabel" onAction="#createButtonAction" />
    <TableView editable="true" fx:id="table" VBox.vgrow="ALWAYS">
      <columns>
        <TableColumn prefWidth="150" sortable="false" styleClass="editColumn">
          <cellFactory>
            <EditButtonTableCellFactory />
          </cellFactory>
          <cellValueFactory>
            <PropertyValueFactory property="state" /> 
          </cellValueFactory>
        </TableColumn>
        <TableColumn text="%ProjectSourceAvailabilityDate" prefWidth="120" sortable="false">
          <cellFactory>
            <DateTableCellFactory property="availabilityDate" /> 
          </cellFactory>
          <cellValueFactory>
            <PropertyValueFactory property="availabilityDate" /> 
          </cellValueFactory>
        </TableColumn>
        <TableColumn text="%ProjectSourceExchangeRate" styleClass="numColumn" prefWidth="100" sortable="false">
          <cellFactory>
            <DoubleTableCellFactory property="exchangeRate" /> 
          </cellFactory>
          <cellValueFactory>
            <PropertyValueFactory property="exchangeRate" /> 
          </cellValueFactory>
        </TableColumn>
        <TableColumn text="%ProjectSourceAmount">
          <columns>
            <TableColumn fx:id="accountingCurrencyAmountColumn" styleClass="numColumn" prefWidth="120" editable="false" sortable="false">
              <cellFactory>
                <DoubleTableCellFactory property="accountingCurrencyAmount" /> 
              </cellFactory>
              <cellValueFactory>
                <PropertyValueFactory property="accountingCurrencyAmount" /> 
              </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="grantCurrencyAmountColumn" prefWidth="120" styleClass="numColumn" sortable="false">
              <cellFactory>
                <DoubleTableCellFactory property="grantCurrencyAmount" /> 
              </cellFactory>
              <cellValueFactory>
                <PropertyValueFactory property="grantCurrencyAmount" /> 
              </cellValueFactory>
            </TableColumn>
          </columns>
        </TableColumn>
        <TableColumn text="%ProjectSourceUsedAmount">
          <columns>
            <TableColumn fx:id="usedAccountingCurrencyAmountColumn" prefWidth="120" styleClass="numColumn" editable="false" sortable="false">
              <cellFactory>
                <DoubleTableCellFactory property="usedAccountingCurrencyAmount" /> 
              </cellFactory>
              <cellValueFactory>
                <PropertyValueFactory property="usedAccountingCurrencyAmount" /> 
              </cellValueFactory>
            </TableColumn>               
            <TableColumn fx:id="usedGrantCurrencyAmountColumn" prefWidth="120" styleClass="numColumn" editable="false" sortable="false">
              <cellFactory>
                <DoubleTableCellFactory property="usedGrantCurrencyAmount" />
              </cellFactory>
              <cellValueFactory>
                <PropertyValueFactory property="usedGrantCurrencyAmount" /> 
              </cellValueFactory>
            </TableColumn>
          </columns>
        </TableColumn>
        <TableColumn text="%ProjectSourceRemainingAmount">
          <columns>
            <TableColumn fx:id="remainingAccountingCurrencyAmountColumn" prefWidth="120" styleClass="numColumn" editable="false" sortable="false">
              <cellFactory>
                <DoubleTableCellFactory property="remainingAccountingCurrencyAmount" /> 
              </cellFactory>
              <cellValueFactory>
                <PropertyValueFactory property="remainingAccountingCurrencyAmount" /> 
              </cellValueFactory>
            </TableColumn>               
            <TableColumn fx:id="remainingGrantCurrencyAmountColumn" prefWidth="120" styleClass="numColumn" editable="false" sortable="false">
              <cellFactory>
                <DoubleTableCellFactory property="remainingGrantCurrencyAmount" /> 
              </cellFactory>
              <cellValueFactory>
                <PropertyValueFactory property="remainingGrantCurrencyAmount" /> 
              </cellValueFactory>
            </TableColumn>
          </columns>
        </TableColumn>
      </columns>
    </TableView>
  </children>
</VBox>
