<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.cell.*?>
<?import com.github.gaborfeher.grantmaster.ui.cells.*?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.gaborfeher.grantmaster.ui.ExpenseTypesTabController">
  <children>
    <Button text="%AddExpenseTypeButtonLabel" onAction="#handleExpenseTypeAddButtonAction" />
    <TableView fx:id="table" editable="true" VBox.vgrow="ALWAYS">
      <rowFactory>
        <SummaryHighlighterRowFactory />
      </rowFactory>
      <columns>
        <TableColumn prefWidth="150" sortable="false">
          <cellFactory>
            <EditButtonTableCellFactory />
          </cellFactory>
          <cellValueFactory>
            <PropertyValueFactory property="state" /> 
          </cellValueFactory>
        </TableColumn>
        <TableColumn text="%ExpenseTypeDirectionColumnLabel" prefWidth="150" editable="true" sortable="false">
          <cellFactory>
            <ExpenseTypeDirectionTableCellFactory property="direction" /> 
          </cellFactory>
          <cellValueFactory>
            <PropertyValueFactory property="direction" />
          </cellValueFactory>
        </TableColumn>
        <TableColumn text="%ExpenseTypeGroupNameColumnLabel" prefWidth="150" editable="true" sortable="false">
          <cellFactory>
            <StringTableCellFactory property="groupName" /> 
          </cellFactory>
          <cellValueFactory>
            <PropertyValueFactory property="groupName" />
          </cellValueFactory>
        </TableColumn>
        <TableColumn text="%ExpenseTypeNameColumnLabel" prefWidth="150" editable="true" sortable="false">
          <cellFactory>
            <StringTableCellFactory property="name" /> 
          </cellFactory>
          <cellValueFactory>
            <PropertyValueFactory property="name" />
          </cellValueFactory>
        </TableColumn>        
      </columns>
    </TableView>                
  </children>
</VBox>